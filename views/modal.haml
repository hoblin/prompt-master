#image-modal.modal{tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %h5#image-modal-title.modal-title
        .btn-group.float-end{role: "group"}
          %button.btn#image-modal-collect-tag.noSelect{type: "button"}
            %i.fa-solid.fa-cart-plus
          %button.btn#image-modal-featured.noSelect{type: "button"}
            %i.fa-regular.fa-heart
          %button.btn#image-modal-unfeatured.noSelect{type: "button"}
            %i.fa-solid.fa-heart
          %button.btn#image-modal-hide.noSelect{type: "button"}
            %i.fa-regular.fa-eye-slash
          %button.btn#image-modal-unhide.noSelect{type: "button"}
            %i.fa-solid.fa-eye-slash
          %button.btn.modal-copy.noSelect{type: "button", data: {'clipboard-target': '#image-modal-title'}}
            %i.fa-solid.fa-copy
      .modal-body
        .container.container-fluid
          .row
            .col-12
              #image-modal-content
      .modal-footer
        %button.btn-close.noSelect{type: "button", aria: {label: "Close"}, data: {'bs-dismiss': 'modal'}}

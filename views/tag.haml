.tag{id: "tag-#{tag.id}", class: "#{tag.featured ? 'featured' : ''} #{tag.hidden ? 'hidden' : ''}"}
  .swiper{id: tag.tag_name, data: { id: tag.tag_name }}
    .swiper-wrapper
      - tag.images.each do |image|
        .swiper-slide
          %img{alt: "#{tag.name}", src: "#{image.url}", onclick: "showModal('#{image.url}', '#{tag.to_json}')"}
    .swiper-scrollbar
  .tag-footer
    .actions.d-flex.justify-content-between
      .rating
        - 5.times.each do |i|
          - rating_id = "tag#{tag.id}-star#{i+1}"
          %input{type: "radio", id: rating_id, name: "tag#{tag.id}-rating", value: "#{i+1}", checked: (tag.rank == i+1)}
          %label{for: rating_id, onclick: "rateTag(#{tag.id}, #{i+1})"} â˜†
      .tag-footer-icons
        %i.fa-solid.fa-heart
    .tag-name= tag.name
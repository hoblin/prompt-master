.card.tag{id: "tag-#{tag.id}", class: "#{tag.featured ? 'featured' : ''} #{tag.hidden ? 'hidden' : ''}"}
  .swiper{id: tag.tag_name, data: { id: tag.tag_name }}
    .swiper-wrapper
      - tag.images.each do |image|
        .swiper-slide
          %img{alt: "#{tag.name}", src: "#{image.url}", onclick: "showModal('#{image.url}', '#{tag.to_json}')"}
    .swiper-scrollbar
  .card-body
    %h5.card-title= tag.name
    .rating.btn-group.btn-group-sm{ role: 'group' }
      - 5.times.each do |i|
        - rating_id = "tag#{tag.id}-star#{i+1}"
        %input.btn-check{type: "radio", id: rating_id, name: "tag#{tag.id}-rating", value: "#{i+1}", checked: (tag.rank == 5 - i)}
        %label.btn.btn-tag-rating{for: rating_id, onclick: "rateTag(#{tag.id}, #{i+1})"} â˜†
    .card-footer
      .d-flex.justify-content-between
        .btn-group.p-2
          %button.btn.btn-link.btn-tag-featured{disabled: true}
            %i.fa.fa-heart
          %button.btn.btn-link.btn-tag-hidden{disabled: true}
            %i.fa.fa-eye-slash
        .btn-group.p-2
          %button.btn.btn-tag-delete{type: "button", onclick: "confirmDeleteModalShow('tag', #{tag.id}, '#{tag.name}')"}
            %i.fa.fa-trash
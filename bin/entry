#!/bin/bash
set -e
# set env
export RACK_ENV=production
# update repo
git reset --hard
git checkout main
git pull origin main --ff-only
# copy secrets file if not exists
cp -n /app/secrets.yml.example /app/secrets.yml
# install gems
bundle install --without development test
# migrate database
rake db:create
rake db:migrate
# merge files
rake app:merge
# sync app
rake app:sync

exec "$@"